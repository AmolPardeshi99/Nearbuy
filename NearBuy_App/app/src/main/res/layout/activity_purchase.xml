<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d3d3d3"
    android:orientation="vertical"
    tools:context=".PurchaseActivity">

    <TextView
        android:id="@+id/Tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e7e7e7"
        android:gravity="center"
        android:padding="10dp"
        android:drawableLeft="@drawable/ic_arrow"
        android:text="My purchases"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Tv2"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:background="@color/white"
            android:drawableLeft="@drawable/home3new"
            android:gravity="start|center"
            android:text="Vouchers"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Tv3"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:layout_below="@id/Tv2"
            android:background="@color/white"
            android:drawableLeft="@drawable/delivery22"
            android:gravity="start|center"
            android:text="Food Delivery"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Tv4"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:layout_below="@id/Tv3"
            android:background="@color/white"
            android:drawableLeft="@drawable/home_service"
            android:gravity="start|center"
            android:text="Home Services"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold" />


    </RelativeLayout>

</LinearLayout>

